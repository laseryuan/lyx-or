#% Do not delete the line below; configure depends on this
#  \DeclareLaTeXClass[nih]{proposal (NIH)}
# Author: Rob Oakes <LyX-Devel@oak-tree.us>

Format 11
Input stdclass.inc

SecNumDepth             3
TocDepth                3

NoStyle Chapter
NoStyle Chapter*

Style Section
	LabelType             Counter
	LabelCounter          section
	LabelString           "\Alph{section}"
End

Counter subsection
	LabelString           "\Alph{section}.\{subsection}"
End

Style Part
	Align                 Left
	AlignPossible         Left
	TopSep                2
	BottomSep             1.5
	Font
	  Size                Larger
	EndFont
End


Style Part*
	Align                 Left
	AlignPossible         Left
	TopSep                2
	BottomSep             1.5
	Font
	  Size                Larger
	EndFont
End

